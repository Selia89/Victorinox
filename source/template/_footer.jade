mixin footer_list(value)
    ul.footer__list.col-3.indent
        for name in value
            li.footer__list-item
                a(href="#").footer__list-item-link= name
        
mixin border()
    .col-12.indent
        .border

footer.footer
    .wrapper
        +border()
        .footer__top-block
            +footer_list(["Каталог", "Армейские ножи", "Кухонные и профессиональные ножи", "Багаж", "Новинки", "Спецпредложения", "Распродажа"])
            +footer_list(["О компании", "Новости", "Оплата и доставка", "Гарантия и сервис", "Карта клиента", "Частые вопросы", "Купить оптом", "Контакты"])

            .footer__top-block-column3.col-3.indent    
                ul.footer__list
                    li.footer__list-item
                        a(href="#").footer__list-item-link Наши магазины
                    li.footer__list-item
                        a(href="#").footer__list-item-link ТЦ Замок
                    li.footer__list-item
                        a(href="#").footer__list-item-link ТЦ Галерея Минск
                    li.footer__list-item
                        a(href="#").footer__list-item-link ТЦ Dana Mall
                button.footer__top-block-column3-btn.COMPLAINT_open Пожаловаться
                
            .footer__top-block-column4.col-3.indent
                .footer__top-block-column4-description
                    h6.footer__top-block-column4-head Подпишитесь на свежие новости
                    form.footer__top-block-column4-input-block
                        input(type="email" name="email" placeholder="Ваш e-mail").footer__top-block-column4-input
